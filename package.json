{
  "name": "ja-football-scoreboard",
  "version": "2.0.0",
  "description": "Professional football scoreboard created by JA",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run lint && npm test",
    "clean": "rm -f state_backup.json && rm -rf node_modules",
    "setup": "npm install && npm run create-dirs",
    "create-dirs": "mkdir -p fonts logs"
  },
  "keywords": [
    "football",
    "soccer",
    "scoreboard",
    "websocket",
    "real-time",
    "sports"
  ],
  "author": "Javoxir Axmedov",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.53.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jekaaxmedov/football-scoreboard.git"
  },
  "bugs": {
    "url": "https://github.com/jekaaxmedov/football-scoreboard/issues"
  },
  "homepage": "https://github.com/jekaaxmedov/football-scoreboard#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server.js",
      "config.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}